                        <class>authorizenet/directpost_observer</class>
                        <method>addAdditionalFieldsToResponseFrontend</method>
                    </directpost_save_order_onepage>
                </observers>
            </controller_action_postdispatch_checkout_onepage_saveOrder>
        </events>
        -->
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ScaleWorks_Bitcoin before="Mage_Adminhtml">ScaleWorks_Bitcoin_Adminhtml</ScaleWorks_Bitcoin>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <currency>
            <bitcoincharts>
                <timeout>100</timeout>
            </bitcoincharts>
            <import>
                <enabled>0</enabled>
                <error_email><![CDATA[]]></error_email>
                <error_email_identity>general</error_email_identity>
                <error_email_template>currency_import_error_email_template</error_email_template>
            </import>
        </currency>
        <payment>
            <bitcoin>
                <active>1</active>
                <title>Bitcoin</title>
                <model>bitcoin/payment_method_bitcoin</model>
                <bitcoind_https>1</bitcoind_https>
                <bitcoind_host>127.0.0.1</bitcoind_host>
                <bitcoind_port>8332</bitcoind_port>
                <bitcoind_username></bitcoind_username>
                <bitcoind_password></bitcoind_password>
                <minimum_confirmations>6</minimum_confirmations>
                <debug>0</debug>
                <order_status>pending</order_status>
                <create_order_before>1</create_order_before>
                <group>offline</group>
            </bitcoin>
        </payment>
    </default>


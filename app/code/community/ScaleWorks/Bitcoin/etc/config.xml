<config>
    <modules>
        <ScaleWorks_Bitcoin>
            <version>0.0.1</version>
        </ScaleWorks_Bitcoin>
    </modules>
    <global>
        <blocks>
            <bitcoin><class>ScaleWorks_Bitcoin_Block</class></bitcoin>
        </blocks>
        <models>
            <bitcoin><class>ScaleWorks_Bitcoin_Model</class></bitcoin>
        </models>
        <helpers>
            <bitcoin><class>ScaleWorks_Bitcoin_Helper</class></bitcoin>
        </helpers>
        <resources>
            <bitcoin_setup>
                <setup>
                    <module>ScaleWorks_Bitcoin</module>
                </setup>
            </bitcoin_setup>
        </resources>
        <currency>
            <import>
                <services>
                    <bitcoincharts>
                        <name>Bitcoincharts</name>
                        <model>bitcoin/currency_import_bitcoincharts</model>
                    </bitcoincharts>
                </services>
            </import>
        </currency>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <bitcoin>
                    <file>scaleworks/bitcoin.xml</file>
                </bitcoin>
            </updates>
        </layout>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ScaleWorks_Bitcoin before="Mage_Adminhtml">ScaleWorks_Bitcoin_Adminhtml</ScaleWorks_Bitcoin>
                    </modules>
                </args>
            </adminhtml>
        </routers>
        <events>
            <checkout_submit_all_after>
                <observers>
                    <directpost_update_all_edit_increments>
                        <class>authorizenet/directpost_observer</class>
                        <method>updateAllEditIncrements</method>
                    </directpost_update_all_edit_increments>
                </observers>
            </checkout_submit_all_after>
        </events>
        <!--
        <translate>
            <modules>
                <ScaleWorks_Bitcoin>
                    <files>
                        <default>ScaleWorks_Bitcoin.csv</default>
                    </files>
                </ScaleWorks_Bitcoin>
            </modules>
        </translate>
        -->
    </adminhtml>

    <frontend>
        <translate>
            <modules>
                <ScaleWorks_Bitcoin>
                    <files>
                        <default>ScaleWorks_Bitcoin.csv</default>
                    </files>
                </ScaleWorks_Bitcoin>
            </modules>
        </translate>
         <routers>
            <bitcoin>
                <use>standard</use>
                <args>
                    <module>ScaleWorks_Bitcoin</module>
                    <frontName>bitcoin</frontName>
                </args>
            </bitcoin>
        </routers>
        <layout>
            <updates>
                <bitcoin>
                    <file>scaleworks/bitcoin.xml</file>
                </bitcoin>
            </updates>
        </layout>
